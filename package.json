{
  "name": "kitsu-publisher",
  "version": "0.0.1",
  "description": "Desktop publisher for Kitsu",
  "author": "CGWire <contact@cg-wire.com>",
  "repository": "https://github.com/cgwire/kitsu-publisher-next",
  "main": "./electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "preelectron:build": "npm run build",
    "electron:build": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "electron:run": "electron ./electron/main.js",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on tcp:3000 && cross-env MODE=development npm run electron:run\"",
    "pretest": "npm run build",
    "test": "node tests/app.spec.js",
    "lint": "eslint --ext .js,.vue,.ts --ignore-path .gitignore --fix .",
    "format": "prettier . --ignore-path .gitignore --write"
  },
  "dependencies": {
    "@vue/compat": "^3.2.16",
    "bulma": "0.9.3",
    "color-hash": "^2.0.1",
    "color-string": "^1.6.0",
    "marked": "^3.0.4",
    "moment-timezone": "^0.5.33",
    "sanitize-html": "^2.5.1",
    "superagent": "^6.1.0",
    "thenby": "^1.3.4",
    "vue": "^3.2.0",
    "vue-feather": "^2.0.0-rc",
    "vue-feather-icons": "^5.1.0",
    "vue-i18n": "^9.1.7",
    "vue-router": "^4.0.11",
    "vuex": "^4.0.2",
    "vuex-router-sync": "^6.0.0-rc.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "1.4.0",
    "@vue/compiler-sfc": "^3.0.5",
    "browserslist": "^4.17.0",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "electron": "13.1.9",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^7.18.0",
    "prettier": "2.4.1",
    "sass": "1.37.5",
    "sass-loader": "12.1.0",
    "vite": "^2.4.4",
    "vite-plugin-eslint": "^1.3.0",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.cg-wire.kitsu-publisher",
    "productName": "Kitsu Publisher",
    "copyright": "Copyleft Â© 2021 ${CGWire}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "browserslist": [
    "Chrome 91"
  ],
  "engines": {
    "node": ">=16.0"
  }
}
