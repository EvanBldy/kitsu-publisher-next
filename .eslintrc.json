{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "browser": false
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "globals": {
    "defineProps": "readonly",
    "defineEmits": "readonly",
    "defineExpose": "readonly",
    "withDefaults": "readonly"
  },
  "ignorePatterns": ["node_modules/**", "**/dist/**"],
  "plugins": ["prettier"]
}
